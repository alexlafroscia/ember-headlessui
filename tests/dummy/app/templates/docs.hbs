<div class='flex'>
  <DocfyOutput @scope='docs' as |node|>
    <ul class='p-2'>
      {{#each node.pages as |page|}}
        <li>
          <DocfyLink @to={{page.url}}>
            {{page.title}}
          </DocfyLink>
        </li>
      {{/each}}
    </ul>
  </DocfyOutput>

  <div>
    {{outlet}}
  </div>
</div>